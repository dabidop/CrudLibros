@model IEnumerable<CRUDDavidAlvarezEF.Models.Libro>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Lista de Libros</h1>
<br/>
<div style="display:flex;justify-content: space-between">
<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<br />

<form asp-controller="Libroes" asp-action="Index">
    <p>
        Buscar:<input type="text" name="buscar" class="form-text"/>
        <input type="submit" value="Buscar" class="btn btn-sm btn-outline-dark"/>
    </p>
</form>
</div>
<br />
<br />
<div style="background-color:rgb(245, 244, 242);border-radius: 15px;padding:10px">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" style="text-decoration:none;color:black" asp-route-filtro="@ViewData["FiltroNombre"]">
                        @Html.DisplayNameFor(model => model.Titulo)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreAutor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Publicacion)
                </th>
                <th>
                    <a asp-action="Index" style="text-decoration:none;color:black" asp-route-filtro="@ViewData["FiltroFecha"]">
                        @Html.DisplayNameFor(model => model.FechaRegistro)
                    </a>
                
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CodigoCategoria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NitEditorial)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreAutor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publicacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoCategoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NitEditorial)
                </td>
                <td>
                        <a asp-action="Edit" class="btn btn-outline-warning" asp-route-id="@item.Isbn">Edit</a>
                        <a asp-action="Details" class="btn btn-outline-success" asp-route-id="@item.Isbn">Details</a>
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Isbn">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
